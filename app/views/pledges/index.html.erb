<h1>Listing pledges for <%= @project.title %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @project.pledges.each do |pledge| %>
      <tr>
        <td><%= pledge.user_id %></td>
        <td><%= pledge.amount %></td>
        <td><%= link_to 'Show', project_pledge_path(@project, pledge) %></td>
        <td><%= link_to 'Edit', edit_project_pledge_path(@project, pledge) %></td>
        <td><%= link_to 'Destroy', project_pledge_path(@project, pledge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>